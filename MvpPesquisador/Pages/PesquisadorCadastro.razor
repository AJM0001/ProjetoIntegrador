@page "/pesquisadorcadastro"

@using MvpPesquisador.Modelo
@using MvpPesquisador.Controllers
@inject PessoaController pesquisadorController
@inject Modelo.Pesquisador pesquisador
@using Microsoft.AspNetCore.Components.Forms

<EditForm Model="@pesquisador" OnValidSubmit="@(e => pesquisadorController.CriarPessoa(pesquisador))">
    <DataAnnotationsValidator />

    <div class="form-group d-flex justify-content-center align-items-center" style="margin: 20px;">
        <h3>Cadastro Pesquisador</h3>
    </div>

    <div class="form-group d-flex flex-row" style="margin: 20px;">
        <div style="width: 20%;">
            <label>Nome:</label>
        </div>
        <div style="width: 45%;">
            <InputText class="form-control" id="nome" @bind-Value="@pesquisador.Nome"></InputText>
            <ValidationMessage For="@(() => pesquisador.Nome)" />
        </div>
    </div>

    <div class="form-group d-flex flex-row" style="margin: 20px;">
        <div style="width: 20%;">
            <label>Codigo da Instituição:</label>
        </div>
        <div style="width: 45%;">
            <InputNumber class="form-control" id="CodigoInstituicao" @bind-Value="@pesquisador.CodigoInstituicao"></InputNumber>
            <ValidationMessage For="@(() => pesquisador.CodigoInstituicao)" />
        </div>
    </div>

    <div class="form-group d-flex flex-row" style="margin: 20px;">
        <div style="width: 20%;">
            <label>Formação:</label>
        </div>
        <div style="width: 45%;">
            <InputText class="form-control" id="Formacao" @bind-Value="@pesquisador.Formacao"></InputText>
            <ValidationMessage For="@(() => pesquisador.Formacao)" />
        </div>
    </div>

    <div class="form-group d-flex flex-row" style="margin: 20px;">
        <div style="width: 20%;">
            <label>Lattes:</label>
        </div>
        <div style="width: 45%;">
            <InputText class="form-control" id="Lattes" @bind-Value="@pesquisador.Lattes"></InputText>
            <ValidationMessage For="@(() => pesquisador.Lattes)" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary" style="margin: 20px;">Salvar</button>
</EditForm>
